AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_CLOUDFRONT_DOMAIN=

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://txd.bike

# Image CDN
IMAGE_CDN_DOMAIN=

# Upload Limits
MAX_UPLOAD_BYTES=10485760

# Security Configuration
CSRF_SECRET= # Generate with: openssl rand -hex 32
UPSTASH_REDIS_REST_URL= # Optional: for distributed rate limiting
UPSTASH_REDIS_REST_TOKEN= # Optional: for distributed rate limiting

