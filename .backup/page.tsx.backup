'use client'

/**
 * Main Landing Page with Full-Screen 3D Hero Scene
 * 
 * Features:
 * - Full-screen 3D hero scene (100vh) using model-viewer
 * - Parallax scroll effect - scene scrolls out before revealing content
 * - Model switching via top menu (5 scooter models)
 * - Design switching via product cards
 * - Fixed scene until scroll trigger, then transitions to white block
 * - Product grid that updates dynamically based on selected model
 */

import { useState, useEffect, useRef } from 'react'
import dynamic from 'next/dynamic'
import { scooters, getDefaultScooter } from '@/config/scooters'
import { useLanguage } from '@/contexts/LanguageContext'
import LanguageSwitcher from '@/components/LanguageSwitcher'
import DesignModal from '@/components/DesignModal'
import ParallaxBackground from '@/components/ParallaxBackground'

// Dynamically import ScooterViewer without SSR to avoid hydration errors
const ScooterViewer = dynamic(() => import('@/components/ScooterViewer'), {
  ssr: false,
  loading: () => (
    <div className="relative w-full h-full flex items-center justify-center bg-gradient-to-b from-neutral-100 to-neutral-50">
      <div className="text-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-neutral-400 mx-auto mb-4"></div>
        <p className="text-neutral-600">Loading 3D Viewer...</p>
      </div>
    </div>
  ),
})

export default function Home() {
  const { t } = useLanguage()
  const [selectedModel, setSelectedModel] = useState('lead') // Default to Honda Lead
  const [selectedDesign, setSelectedDesign] = useState(null)
  const [scrollProgress, setScrollProgress] = useState(0)
  const [isPastTrigger, setIsPastTrigger] = useState(false)
  const [modalDesign, setModalDesign] = useState(null)
  const [rotationAngle, setRotationAngle] = useState(0)
  const heroRef = useRef(null)
  const contentRef = useRef(null)

  // Get current scooter config
  const currentScooter = scooters[selectedModel] || getDefaultScooter()
  
  // Set default design when model changes
  useEffect(() => {
    if (currentScooter && currentScooter.designs.length > 0) {
      setSelectedDesign(currentScooter.designs[0])
    }
  }, [selectedModel, currentScooter])

  // Handle scroll for parallax effect
  useEffect(() => {
    const handleScroll = () => {
      const scrollY = window.scrollY
      const windowHeight = window.innerHeight
      const triggerPoint = windowHeight * 0.8 // Trigger at 80% of viewport height
      
      setScrollProgress(Math.min(scrollY / windowHeight, 1))
      setIsPastTrigger(scrollY > triggerPoint)
    }

    window.addEventListener('scroll', handleScroll, { passive: true })
    handleScroll() // Initial call

    return () => window.removeEventListener('scroll', handleScroll)
  }, [])

  // Handle model switching
  const handleModelChange = (modelId) => {
    setSelectedModel(modelId)
    // Reset scroll position to top (but don't reload page)
    window.scrollTo({ top: 0, behavior: 'smooth' })
  }

  // Handle design selection - open modal
  const handleDesignSelect = (design) => {
    setModalDesign(design)
  }

  // Handle buy button
  const handleBuy = (design) => {
    setSelectedDesign(design)
    setModalDesign(null)
    // Apply design to 3D model will be handled by ScooterViewer
  }

  // Calculate parallax transform
  const parallaxY = scrollProgress * 100 // Move scene up as user scrolls

  return (
    <>

      {/* Full-Screen 3D Hero Scene - Fixed position, no scroll parallax */}
      <section
        ref={heroRef}
        className="fixed top-0 left-0 w-full h-screen z-10 pointer-events-none"
        style={{
          opacity: isPastTrigger ? 0 : 1,
          transition: isPastTrigger ? 'opacity 0.5s ease-out' : 'none',
        }}
        suppressHydrationWarning
      >
        {/* Parallax Background */}
        <ParallaxBackground rotationAngle={rotationAngle} />
        
        <div className="absolute inset-0 w-full h-full pointer-events-auto" suppressHydrationWarning>
          <ScooterViewer
            modelPath={currentScooter.model}
            selectedDesign={selectedDesign}
            environmentImage="/hdr/studio.hdr"
            className="w-full h-full"
            onRotationChange={setRotationAngle}
          />
        </div>

        {/* Model Selection Menu Overlay */}
        <div className="absolute top-24 left-0 right-0 z-30">
          <div className="container mx-auto px-4 md:px-8 lg:px-16">
            <div className="flex flex-wrap justify-center gap-2 md:gap-4 items-center">
              <div className="w-full md:w-auto flex justify-center mb-2 md:mb-0">
                <LanguageSwitcher />
              </div>
              {Object.entries(scooters).map(([id, scooter]) => (
                <button
                  key={id}
                  onClick={() => handleModelChange(id)}
                  className={`px-4 py-2 rounded-lg font-medium transition-all duration-300 ${
                    selectedModel === id
                      ? 'bg-white text-neutral-900 shadow-lg'
                      : 'bg-white/80 backdrop-blur-sm text-neutral-600 hover:bg-white/90'
                  }`}
                >
                  {scooter.name}
                </button>
              ))}
            </div>
          </div>
        </div>
      </section>

      {/* White Content Block (appears after scroll) */}
      <div
        ref={contentRef}
        className="relative z-20 bg-white min-h-screen"
        style={{
          marginTop: '100vh', // Push content below the hero scene
        }}
      >
        <div className="container mx-auto px-4 md:px-8 lg:px-16 py-16">
          {/* Product Grid */}
          <div className="mb-16">
            <h2 className="text-4xl md:text-5xl font-bold mb-8 text-center">
              {currentScooter.name} {t('hero3d.designs')}
            </h2>
            
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {currentScooter.designs.map((design) => {
                // Use preview for image, texture for 3D model
                const imageSrc = design.preview || design.texture || ''
                const isSelected = selectedDesign?.id === design.id
                
                return (
                <button
                  key={design.id}
                  onClick={() => handleDesignSelect(design)}
                  className={`group relative overflow-hidden rounded-2xl bg-neutral-100 aspect-square transition-all duration-300 ${
                    isSelected
                      ? 'ring-4 ring-accent-neon scale-105'
                      : 'hover:scale-105 hover:shadow-xl'
                  }`}
                >
                  {/* Design Preview Image */}
                  <div className="absolute inset-0 flex items-center justify-center bg-gradient-to-br from-neutral-200 to-neutral-300">
                    {imageSrc ? (
                      <img
                        src={imageSrc}
                        alt={design.name}
                        className="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"
                        loading="lazy"
                        onError={(e) => {
                          // Fallback if image doesn't exist
                          e.target.style.display = 'none'
                          const parent = e.target.parentElement
                          if (parent) {
                            parent.innerHTML = `
                              <div class="text-center p-8">
                                <div class="w-24 h-24 mx-auto mb-4 rounded-lg bg-gradient-to-br from-accent-neon to-blue-500 opacity-50"></div>
                                <p class="text-neutral-600 font-medium">${design.name}</p>
                              </div>
                            `
                          }
                        }}
                      />
                    ) : (
                      <div className="text-center p-8">
                        <div className="w-24 h-24 mx-auto mb-4 rounded-lg bg-gradient-to-br from-accent-neon to-blue-500 opacity-50"></div>
                        <p className="text-neutral-600 font-medium">{design.name}</p>
                      </div>
                    )}
                  </div>

                  {/* Design Info Overlay */}
                  <div className="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/60 to-transparent">
                    <h3 className="text-white font-semibold text-lg">{design.name}</h3>
                    {isSelected && (
                      <p className="text-accent-neon text-sm mt-1">{t('hero3d.selected')}</p>
                    )}
                  </div>
                </button>
              )})}
            </div>
          </div>

          {/* Instructions Section */}
          <div className="max-w-3xl mx-auto text-center space-y-6 text-neutral-600">
            <h3 className="text-2xl font-semibold text-neutral-900">{t('hero3d.howItWorks')}</h3>
            <p>
              {t('hero3d.howItWorksDescription')}
            </p>
            <div className="pt-8 border-t border-neutral-200">
              <p className="text-sm">
                <strong>{t('hero3d.note')}</strong> {t('hero3d.noteDescription')} <code className="bg-neutral-100 px-2 py-1 rounded">/public/models/</code> {t('hero3d.andTextureImages')} <code className="bg-neutral-100 px-2 py-1 rounded">/public/textures/</code>
              </p>
            </div>
          </div>
        </div>
      </div>

      {/* Design Modal */}
      <DesignModal
        design={modalDesign}
        scooter={currentScooter}
        isOpen={!!modalDesign}
        onClose={() => setModalDesign(null)}
        onBuy={handleBuy}
      />
    </>
  )
}
